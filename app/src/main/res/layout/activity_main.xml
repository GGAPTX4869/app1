<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="411dp"
            android:layout_height="732dp"
            android:src="@drawable/img_4"
            android:id="@+id/imageView2" tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints"/>

    <TextView
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="158dp"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" tools:ignore="MissingConstraints"/>
    <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/photo1"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="118dp" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="61dp"/>
    <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:text="   用户名"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:drawableLeft="@drawable/icon_account" tools:layout_editor_absoluteY="234dp"
            tools:layout_editor_absoluteX="41dp"
            android:theme="@style/editTextStyle2" tools:ignore="MissingConstraints"/>
    <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:text="   密码"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:drawableLeft="@drawable/icon_account" tools:layout_editor_absoluteY="297dp"
            tools:layout_editor_absoluteX="0dp"
            android:theme="@style/editTextStyle2" tools:ignore="MissingConstraints"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="MissingConstraints">

    </LinearLayout>

    <TextView
            android:text="找回密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" tools:layout_editor_absoluteY="356dp"
            tools:layout_editor_absoluteX="303dp"
            android:textColor="#F44336"
            android:textStyle="bold" tools:ignore="MissingConstraints"/>

    <Button
            android:text="          登   录          "
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login" tools:layout_editor_absoluteY="390dp"
            tools:layout_editor_absoluteX="105dp" app:backgroundTint="#F44336" tools:ignore="MissingConstraints"/>
    <EditText
            android:text="还没账号？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" tools:layout_editor_absoluteY="446dp"
            tools:layout_editor_absoluteX="275dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12sp"
            android:theme="@style/editTextStyle" tools:ignore="MissingConstraints"/>
    <EditText
            android:text="立即注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5" tools:layout_editor_absoluteY="446dp"
            tools:layout_editor_absoluteX="335dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="12sp"
            android:theme="@style/editTextStyle" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="第三方直接登录"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:id="@+id/textView6" tools:layout_editor_absoluteY="553dp"
            tools:layout_editor_absoluteX="134dp" tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/qq"
            android:id="@+id/imageView3"
            tools:layout_editor_absoluteY="620dp" tools:layout_editor_absoluteX="105dp"
            tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/wechat"
            android:id="@+id/imageView4"
            tools:layout_editor_absoluteY="620dp" tools:layout_editor_absoluteX="168dp"
            tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/pay"
            android:id="@+id/imageView5"
            tools:layout_editor_absoluteY="620dp" tools:layout_editor_absoluteX="238dp"
            tools:ignore="MissingConstraints"/>
    <CheckBox
            android:id="@+id/remrember_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
            tools:layout_editor_absoluteX="7dp" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="记住密码"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content" android:id="@+id/textView2" tools:layout_editor_absoluteY="356dp"
            tools:layout_editor_absoluteX="41dp"
            android:textStyle="bold" tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>